<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.ContactUsActivity">
    <include
        layout="@layout/action_bar_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/contact_us"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="70dp"
        android:fontFamily="@font/peralta"
        android:gravity="center"
        android:text="Contact Us"
        android:textColor="@color/Black"
        android:textSize="20sp"
        android:textStyle="bold" />





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/whatsapp_icon"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/iconfinder_whatsapp_246527"/>

        <TextView
            android:id="@+id/phpne_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="0787557398"
            android:textStyle="bold"
            android:textColor="@color/colorPurple"
            android:textSize="13sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/facebook_icon"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:src="@drawable/iconfinder_facebook_square_black_107119" />

        <TextView
            android:id="@+id/facebook_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPurple"
            android:padding="4dp"
            android:text="Nay Page"
            android:textStyle="bold"
            android:textSize="13sp"
            android:gravity="clip_horizontal"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/instegram_icon"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:src="@drawable/iconfinder_instagram_104466">

        </ImageView>
        <TextView
            android:id="@+id/instagram_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPurple"
            android:padding="4dp"
            android:textStyle="bold"
            android:text="Nay_app"
            android:textSize="13sp"
            android:gravity="clip_vertical"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/email_icon"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:src="@drawable/email_icon">

        </ImageView>
        <TextView
            android:id="@+id/email_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPurple"
            android:textStyle="bold"
            android:padding="4dp"
            android:text="nayapp@gmail.com"
            android:textSize="13sp"
            android:gravity=" "/>
    </LinearLayout>

</LinearLayout>