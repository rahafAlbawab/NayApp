<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/colorPurpleDark"
        android:text="Choose Payment Way" />

    <TextView
        android:id="@+id/paypal_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:textSize="13sp"
        android:textStyle="bold"
        android:textColor="@color/colorPurple"
        android:drawableLeft="@drawable/paypal"
        android:drawablePadding="20dp"
        android:text="PayPal" />

    <TextView
        android:id="@+id/cash_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:textSize="13sp"
        android:textStyle="bold"
        android:textColor="@color/colorPurple"
        android:drawableLeft="@drawable/money"
        android:drawablePadding="20dp"
        android:text="Cash" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">
        <Button
            android:id="@+id/quantity_button"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Ok"
            android:textSize="13sp"
            android:textColor="@color/White"
            android:background="@color/colorPurpleDark"/>
        <Button
            android:id="@+id/quantity_cancel_button"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Cancel"
            android:textSize="13sp"
            android:textColor="@color/White"
            android:background="@color/colorPurpleDark"/>

    </LinearLayout>

</LinearLayout>