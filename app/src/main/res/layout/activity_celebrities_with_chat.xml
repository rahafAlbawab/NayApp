<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.CelebritiesWithChatActivity">
    <include
        layout="@layout/chat_action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/chat_recycler"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
        android:id="@+id/chat_text"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:hint="Typing ...."
        android:textStyle="bold"
        android:textColorHint="@color/colorPurple"
        android:textColor="@color/colorPurple"
        android:textSize="13sp"/>
        <ImageView
            android:id="@+id/camera_chat"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/camera"
            android:padding="5dp"
            android:layout_gravity="center"
            app:tint="@color/colorPurpleDark" />
        <ImageView
            android:id="@+id/send_chat"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/iconfinder_send_326692"
            android:layout_gravity="center"
            android:padding="5dp"
            app:tint="@color/colorPurpleDark"
            />
    </LinearLayout>




</LinearLayout>