<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/cart_border"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Please Enter The Quantity Of Item"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/colorPurpleDark"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:text="Quantity"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/colorPurple"/>
        <EditText
            android:id="@+id/product_quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:textSize="12sp"
            android:textColor="@color/Black"
            android:background="@drawable/cart_border"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">
    <Button
    android:id="@+id/quantity_button"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:layout_gravity="center"
    android:gravity="center"
    android:text="Ok"
    android:textSize="11sp"
    android:textColor="@color/White"
    android:background="@color/colorPurpleDark"/>
    <Button
        android:id="@+id/quantity_cancel_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginLeft="30dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Cancel"
        android:textSize="11sp"
        android:textColor="@color/White"
        android:background="@color/colorPurpleDark"/>

    </LinearLayout>
</LinearLayout>